# Maintainer: anekos <anekos@snca.net>
pkgname=happy-hacking-linux
pkgver=1.0.0
pkgrel=1
pkgdesc="Happy Hacking Linux without mice. Your sensitve mice knock down your computer."
url="http://snca.net.net/"
arch=('i686' 'x86_64')
license=('BSD')
depends=()
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()

source=('happy-hacking-linux' 'happy-hacking-linux.service')
md5sums=('be38d6c8301545aa736fe961aa352be1' 'fff6101ea754699fd7814f4fa8eaefff')

package () {
  cd $srcdir

  install -d -m755 ${pkgdir}/usr/bin
  cp happy-hacking-linux ${pkgdir}/usr/bin/

  install -Dm644 "happy-hacking-linux.service" "$pkgdir/lib/systemd/system/happy-hacking-linux.service"
}

